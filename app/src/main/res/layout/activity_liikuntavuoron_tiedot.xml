<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnIlmoittaudu"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="ILMOITTAUDU"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:background="#c5e1a5"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:layout_below="@+id/btnIlmoittaudu"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/android_kuva"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/txtViewOtsikko"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_marginTop="30dp"
        android:text="Salibandy"
        android:textSize="28dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:id="@+id/txtViewAika"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ma 12.10.2020 klo 16.00 - 17.00"
        android:layout_below="@id/txtViewOtsikko"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/txtViewPaikka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fressimpi Jätkäsaari"
        android:layout_below="@+id/txtViewAika"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/txtViewKuvaus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salibandyn pelivuoro, jossa ei ole ohjausta. Sekavuoro. Liikuntatiloissa on saatavilla mailoja ja palloja. Tunti sopii sekä aloittelijoille että kokeineimmillekin harrastajille."
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/txtViewPaikka"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/txtViewVarusteet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Varusteet: sisäpelikengät"
        android:layout_below="@+id/txtViewKuvaus"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:textSize="16dp"/>

    <ImageView
        android:id="@+id/imageHinta"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_below="@+id/image"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        app:srcCompat="@drawable/real_grey" />

    <TextView
        android:id="@+id/imageViewText"
        android:layout_width="99dp"
        android:layout_height="57dp"
        android:layout_alignLeft="@+id/imageHinta"
        android:layout_alignTop="@+id/imageHinta"
        android:layout_alignRight="@+id/imageHinta"
        android:layout_alignBottom="@+id/imageHinta"
        android:layout_centerInParent="true"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="-1dp"
        android:layout_marginBottom="3dp"
        android:gravity="center"
        android:text="5€"
        android:textSize="25sp" />

</RelativeLayout>